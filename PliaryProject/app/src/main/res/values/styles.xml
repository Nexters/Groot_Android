<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PliaryDatePickerSpinnerTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:datePickerStyle">@style/PliaryDatePickerSpinnerStyle</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorControlNormal">@color/green</item>
    </style>

    <style name="PliaryDatePickerSpinnerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="customPaddingTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/customTabTextAppearance</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/gray1</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>
    <style name="customTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
    </style>

</resources>
